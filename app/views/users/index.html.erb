<div class="container">
  <div class="row pt-5">
    <div class="col-6">
      <h2> Developers </h2>
    </div>
    <div class="col-6">
      <%= link_to "Create Developer", new_user_path, class: "btn btn-success float-right btn-width" %>
    </div>
    <div class="col-12">
      <table class="table table-striped table-bordered" style="width:100%">
        <thead>
          <tr>
            <th>Employee ID</th>
            <th>email</th>
          </tr>
        </thead>
        <tbody>
          <% @developers.each do |developer| %>
            <tr>
              <td><%= link_to developer.employee_id, edit_user_path(developer) %> </td>
              <td><%= developer.email %> </td> 
            </tr>
          <% end %>     
        </tbody>
      </table>
    </div>
    <%= render 'shared/paginate', resource: @developers %>
  </div>
</div>