<div class="container">
  <div class="row pt-5">
    <div class="col-6">
      <h2> Projects </h2>
    </div>
    <div class="col-6">
      <%= link_to "Add Project", new_project_path, class: "btn btn-success float-right btn-width" %>
    </div>
    <div class="col-12">
      <table class="table table-striped table-bordered" style="width:100%">
        <thead>
          <tr>
            <th>Name</th>
            <th>Created By</th>
            <th>Piechart For Status</th>
          </tr>
        </thead>
        <tbody>
          <% @projects.each do |project| %>
            <tr>
              <td><%= link_to project.name, edit_project_path(project) %> </td>
              <td><%= project.creator.employee_id %> </td> 
              <td><%= link_to "Piechart", view_piechart_project_path(project) %> </td>
            </tr>
          <% end %>     
        </tbody>
      </table>
    </div>
    <%= render 'shared/paginate', resource: @developers %>
  </div>
</div>